<html>
  <head>
    <title>HeroStands Version0.01</title>
    <%= stylesheet_link_tag :application %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
  </head>

  <body>
    <header id="page_header">
      <nav id="nav_user">
        <ul>
          <% if user_signed_in? %> 
            <li><span id="currentuser"><%= current_user.username||current_user.email %></span></li>
            &nbsp;
            <li><%= link_to "My Profile", edit_user_registration_path %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %> 
            <li><%= link_to "Sign up", new_user_registration_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>

      <div id="page_title">
        <h1>Write  down what confusing you</h1>
        <h2>Fast <span>changing</span> 24-7 <span>Version 0.01</span></h2>
      </div>
    </header>

    <header id="nav_header">
      <nav id="nav_main">
        <ul>
          <li><%= link_to "questions", root_path %></li>
          <li><%= link_to "about", about_questions_path %></li>
        </ul>
      </nav>
    </header>

    <section id="maincontainer">
      <section id="content">
        <section id="flash">
          <% @questions.each do |question| %>
            <article class="article">
              <div class="title"><%= question.title %></div>
              <% if question.user_username %>
                <div class="username"><%= question.user_username %></div>
              <% else %>
                <div class="username"><%= question.user_id %></div>
              <% end %>
            </article>
          <% end %>
          <br>
              <% if user_signed_in? %>
                <%= link_to 'New Question', new_question_path %>
              <% end %>
        </section>

        <%= yield %>
      </section>

      <section id="sidebar">
        <section id="go" class="box">
          <h3>What gonna do next step</h3>
          <ul>
            <li>User system</li>
            <li>Ranking</li>
            <li>Comments</li>
            <li>Views</li>
          </ul>
        </section>
      </section>
    </section>

    <footer id="page_footer">
      <h3>Let's make it better</h3>
    </footer>
  </body>
</html>






